<h1 class="text-center pt-3 pb-3">Faça um depósito</h1>

<%= form_with(model: @transaction, url: deposit_path, local: true, class:"row align-items-center w-50 m-auto") do |f| %>
  <div class="form-outline mb-4">
    <%= f.label "E-mail do destinatário", class: "form-label" %>
    <%= f.text_field :destination, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-outline mb-4">
    <%= f.label "Quantidade", class: "form-label" %>
    <%= f.number_field :amount, step: :any, class: "form-control" %>
  </div>

  <%= f.submit "Fazer o depósito", class: "btn btn-primary btn-block" %>
<% end %>
