<% if object.errors.any? %>
  <section class="alert alert-danger">
    <h2>
      Houve um erro!
    </h2>
    <h3>
      Por favor, corrija os seguintes pontos:
      <%= pluralize(object.errors.size, "erro") %>:
    </h3>
    <ul>
      <% object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>
