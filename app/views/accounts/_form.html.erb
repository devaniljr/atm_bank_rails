<%= form_with(model: account, local: true, class:"row align-items-center w-50 m-auto") do |f| %>

  <%= render "layouts/errors", object: @account %>

  <div class="form-outline mb-4">
    <%= f.label "Nome", class: "form-label" %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-outline mb-4">
    <%= f.label "E-mail", class: "form-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-outline mb-4">
    <%= f.label "Senha", class: "form-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-outline mb-4">
    <%= f.label :password_confirmation, "Confirme sua senha", class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <% if account.new_record? %>
    <%= f.submit "Criar sua conta", class: "btn btn-primary btn-block" %>
  <% else %>
    <%= f.submit "Atualizar sua conta", class: "btn btn-primary btn-block" %>
  <% end %>
<% end %>
